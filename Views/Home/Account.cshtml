@{
    ViewData["Title"] = "Account";
}

@model Transaction

<div class="container text-center">
    <h1 class="display-4">Welcome, @ViewBag.User.FirstName @ViewBag.User.LastName!</h1>
    <div class="jumbotron">
      <form asp-action="Create" asp-controller="Home" method="post" class="form-group col-5-center">
        <h3>New Transaction:</h3>

        <span class="text-danger" asp-validation-for="Amount"></span>
        <label asp-for="Amount"></label>
        <input class="form-control" asp-for="Amount" type="number" step=".01">

        <input value="Submit" type="submit">
      </form>
    </div>
    
    <h3> Account Balance: @string.Format("{0:C}", @ViewBag.User.Balance)</h3>
    <table class="table-striped table">
      <thead>
          <tr>
              <th scope="col">Amount</th>
              <th scope="col">Date</th>
          </tr>
      </thead>
      <tbody>
        @foreach (Transaction t in ViewBag.Transactions)
        {          
          <tr>
            <td>@string.Format("{0:C}", t.Amount)</td>
            <td>@t.CreatedAt</td>
          </tr>
        }
    </tbody>
</table>
</div>